#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Autobahn\Cli\Application;
use Autobahn\Cli\Commands\Env\SetCommand;
use Autobahn\Cli\Commands\Env\ShowCommand;
use Autobahn\Cli\Commands\Keys\DisplayCommand;
use Autobahn\Cli\Commands\Keys\GenerateCommand;

// Setup application
$application = new Application('Autobahn CLI', '1.0.0-alpha1');

// commands
{
    // env
    $application->add(new SetCommand());
    $application->add(new ShowCommand());
}
{
    // keys
    $application->add(new GenerateCommand());
    $application->add(new DisplayCommand());
}

// Run application
$application->run();
